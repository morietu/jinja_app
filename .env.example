# ========= App toggles =========
DEBUG=1
TESTING=1
AUTO_GEOCODE_ON_SAVE=0

SECRET_KEY=change-me
ALLOWED_HOSTS=localhost,127.0.0.1

# ========= Provider switches =========
USE_GOOGLE=0

# --- Free providers ---
NOMINATIM_BASE=https://nominatim.openstreetmap.org
NOMINATIM_EMAIL=your-contact@example.com
ORS_BASE=https://api.openrouteservice.org
ORS_KEY=__REPLACE_ME__

# --- Google providers ---
GOOGLE_MAPS_API_KEY=__REPLACE_ME__
GOOGLE_PLACES_API_KEY=__REPLACE_ME__

# ========= LLM / Concierge =========
USE_LLM_CONCIERGE=0
LLM_PROVIDER=openai
OPENAI_API_KEY=__REPLACE_ME__
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT_MS=6000
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=800
LLM_FORCE_CHAT=1
LLM_FORCE_JSON=1
LLM_RETRIES=2
LLM_BACKOFF_S=0.5

# ========= Throttle (DRF) =========
DISABLE_THROTTLE=0
THROTTLE_ANON=60/min
THROTTLE_USER=120/min
THROTTLE_CONCIERGE=60/min
THROTTLE_PLACES=30/min
THROTTLE_PLACES_NEARBY=30/min
THROTTLE_SHRINES=60/min

# ========= Cache =========
CACHE_BACKEND=locmem
# REDIS_URL=redis://localhost:6379/0

# ========= DB profile =========
# どちらか一方だけを使う。PROFILEで分岐すると分かりやすい
DB_PROFILE=postgis    # postgis | spatialite

# --- ① PostGIS（Docker/Postgres） ---
USE_GIS=1
USE_SQLITE=0
DB_NAME=jinja_db
DB_USER=admin
DB_PASSWORD=jdb50515
DB_HOST=127.0.0.1
DB_PORT=5432
DATABASE_URL=postgis://admin:jdb50515@127.0.0.1:5432/jinja_db

