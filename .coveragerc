# .coveragerc
[run]
branch = True
source =
    backend
omit =
    # ランタイムエントリ/環境依存
    backend/manage.py
    backend/asgi.py
    backend/shrine_project/wsgi.py

    # URL ルーティングやテンプレ系（振る舞いの薄い結線）
    backend/shrine_project/urls.py
    backend/temples/urls.py
    backend/temples/api_urls.py

    # Django ボイラープレート/管理系
    */migrations/*
    backend/**/admin.py
    backend/**/apps.py
    backend/**/management/commands/*

    # デバッグ/バックアップ/実験用
    backend/tmp_*.py
    backend/temples/debug_views.py
    backend/temples/models_pkg.bak/*
    backend/temples/views.py
    backend/temples/views_me.py
    backend/users/views.py
    backend/users/views_me.py

    # 今は対象外にする領域（LLM ツール群）
    backend/temples/llm/*

    backend/temples/api_views_concierge.py

    # ジオコーディング系（外部I/Oに依存・別途統合テスト想定）
    backend/temples/geocoding/*
    backend/temples/services/places.py

    # 使っていない/デバッグ・補助ビュー群
    backend/temples/api/views/ranking.py
    backend/temples/api/views/visit.py
    backend/temples/services/google_places.py
    backend/temples/api/serializers/favorites.py
    backend/temples/api/serializers/place_import.py
    backend/temples/api/views/favorites.py
    backend/users/serializers.py
    backend/users/signals.py
    backend/users/urls.py

    backend/**/tests/*
    backend/shrine_project/context_processors.py
    backend/shrine_project/cache_keys.py
    backend/temples/forms.py

    backend/temples/tests/_helpers_patch.py
    backend/temples/tests/_kill_geocode.py

    backend/temples/recommendation/llm_adapter.py
    backend/temples/signals.py
    backend/temples/queries.py




[report]
skip_covered = True
show_missing = True
precision = 1
exclude_also =
    if __name__ == .__main__.:
    pragma: no cover
    @abstractmethod
