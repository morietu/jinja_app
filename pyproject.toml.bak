# backend/pyproject.toml

[tool.black]
line-length = 100
target-version = ["py311"]
extend-exclude = '''
^(
  users/|
  .*/migrations/|
  temples/tests/_kill_geocode\.py
)$
'''

[tool.ruff]
line-length = 100
target-version = "py311"
# backend 配下のアプリコードを指定
src = ["temples", "shrine_project", "users"]
# ディレクトリ除外（backend/ は付けない）
extend-exclude = [
  "*/migrations/*",
  "tmp_debug*.py",
]

[tool.ruff.lint]
# まずは致命系と import 整理を中心に
select = ["E", "F", "I"]
# 段階導入：ひとまず長さ/近代化/複雑度/曖昧名/未定義を一部黙らせる（必要に応じて戻す）
ignore = ["E501", "UP006", "UP007", "UP035", "UP038", "C901", "E741"]

[tool.ruff.lint.per-file-ignores]
"temples/tests/**" = ["F403", "F401", "F841", "I001", "UP006", "UP007", "UP038", "E501"]
"*/migrations/*.py" = ["E501", "F401", "I001"]

[tool.ruff.lint.mccabe]
# いったん緩め（後続PRで分割）
max-complexity = 20

[tool.mypy]
python_version = "3.11"
warn_unused_ignores = true
warn_return_any = false
warn_unreachable = true
ignore_missing_imports = true
disallow_untyped_defs = false
exclude = ["migrations"]

[tool.flake8]
max-line-length = 100
extend-ignore = ["E203", "W503"]
per-file-ignores =
  users/migrations/*.py: E501
  temples/migrations/*.py: E501
